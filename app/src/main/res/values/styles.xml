<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="FaceTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="TextInputLayoutStyleLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#6415E2</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/active</item>
    </style>
    <style name="TextInputLayoutStyleRegisteration" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#6415E2</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/active</item>
    </style>

    <style name="inactive" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="active" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">#6415E2</item>
        <item name="android:textSize">12dp</item>
    </style>
    
    <style name="RippleStyleGrey">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorGrey</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorWhite</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

</resources>
